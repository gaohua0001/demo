<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd"
       >
     <!-- 定义事务管理 -->     
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">  
		<property name="dataSource" ref="dataSource"></property>  
	</bean> 
	<!-- 定义事务拦截器 -->
	<bean id="transactionInterceptor" class="org.springframework.transaction.interceptor.TransactionInterceptor">
		<property name="transactionManager" ref="transactionManager" />
		<property name="transactionAttributes">
			<props>
				<prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="insert*">PROPAGATION_REQUIRED,timeout_-1</prop>
				<prop key="do*">PROPAGATION_REQUIRED,timeout_-1</prop>
			</props>
		</property>
	</bean>

	<bean id="gxjsdatasourceInterceptor" class="com.dvt.core.datasource.lookup.GxjsDataSource" autowire="byName" />
	<bean id="newgxjsdatasourceInterceptor" class="com.dvt.core.datasource.lookup.NewGxjsDataSource" autowire="byName" />
	<bean id="newgxjsmxdatasourceInterceptor" class="com.dvt.core.datasource.lookup.NewGxjsMxDataSource" autowire="byName" />
	<bean id="servicePerformanceInterceptor" class="com.dvt.core.spring.ServicePerformance" />
	
	<!-- 快递包裹结算库 -->
	
	<bean class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
		<!-- 指定事务拦截器 -->
		<property name="interceptorNames">
			<list>
				<value>newgxjsdatasourceInterceptor</value>
				<value>transactionInterceptor</value>
			</list>
		</property>
		<property name="beanNames">
			<list>
				<value>ywxxService</value>
			</list>
		</property>
	</bean>
	
	<bean class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
		<!-- 指定事务拦截器 -->
		<property name="interceptorNames">
			<list>
				<value>newgxjsmxdatasourceInterceptor</value>
				<value>transactionInterceptor</value>
			</list>
		</property>
		<property name="beanNames">
			<list>
				<value>tdxxService</value>
				<value>ysxxService</value>
				<value>nbclService</value>
			</list>
		</property>
	</bean>
	
	<bean class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
		<!-- 指定事务拦截器 -->
		<property name="interceptorNames">
			<list>
				<value>gxjsdatasourceInterceptor</value>
				<value>transactionInterceptor</value>
			</list>
		</property>
		<property name="beanNames">
			<list>
				<value>gxjsService</value>
			</list>
		</property>
	</bean>
	
</beans>